{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "qpaste",
  "version": "1.0.0",
  "identifier": "com.gulon.qpaste",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "qpaste",
        "width": 800,
        "height": 600,
        "fullscreen": true,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "visible": false
      },
      {
        "label": "settings",
        "title": "Settings",
        "width": 400,
        "height": 550,
        "resizable": false,
        "center": true,
        "visible": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}